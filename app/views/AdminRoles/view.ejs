<div class="ibox float-e-margins">
    <div>
        <h5><%= __('Admin Role detail') %></h5>
    </div>
    <div class="ibox-content">
        <table class="vertical-table table table-condensed table-striped">
            <tr>
                <th>
                    <%= __('Id') %>
                </th>
                <td>
                    <%= adminRole._id %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= __('Name') %>
                </th>
                <td>
                    <%= adminRole.name %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= __('Description') %>
                </th>
                <td>
                    <%= adminRole.description %>
                </td>
            </tr>

            <tr>
            <tr>
                <th>
                    <%= __('Active') %>
                </th>
                <td>
                    <%= (adminRole.status) ? __('Yes') : __('No'); %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= __('Created') %>
                </th>
                <td>
                    <%= adminRole.created_date %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= __('Modified') %>
                </th>
                <td>
                    <%= adminRole.updated_date %>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div class="container-fluid">
                        <div class="row admin-btn-actions">

                            <a href="<%= buildRoutes({action:'index'},req) %>" class="btn btn-white" title="Back to roles"><i class="fa fa-chevron-left"></i> Back</a>
                            <a href="<%= buildRoutes({action:'edit',options:{id:adminRole._id}},req) %>" class="btn btn-primary" title="Edit this role"><i class="fa fa-edit"></i> Edit</a>
                            <form method="post" style="display:none;" action="<%= buildRoutes({action:'delete',options:{id:adminRole._id}},req) %>" id="postDelete_<%= adminRole._id %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            </form>
                                <a class="btn btn-danger" onclick='if (confirm("Are you sure you want to delete # <%= adminRole._id %>?")) { document.getElementById("postDelete_<%= adminRole._id %>").submit(); } event.returnValue = false; return false;' href="#"><i class="fa fa-trash-o"></i>Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
