<div class="ibox float-e-margins">
    <div>
        <h5><%= __('Edit Admin Role'); %></h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-4 m-b-xs">
                <a class='btn btn-primary' escape href="<%= routesLink.AdminRoles.index.routes %>"><i class="glyphicon glyphicon-list-alt"></i> <%=  __('List Admin Role') %> </a>
            </div>
        </div>

        <div class="box-body">
            <form method="post" class='form-horizontal' novalidate='novalidate'>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group <%= (checkExist('name',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="name"><%= __('name'); %></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="<%= __('name'); %>" value="<%=(adminRole.name)?adminRole.name:'' %>" />
                        <% if (checkExist('name',errors)){  %>
                        <label class="error"><%= errors.name %></label>
                        <% } %>
                    </div>
                </div>
                <div class="form-group  <%= (checkExist('description',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="description"><%= __('description'); %></label>
                    <div class="col-md-10">
                        <input type="description" class="form-control" id="description" name="description" placeholder="<%= __('description'); %>" value="<%=(adminRole.description)?adminRole.description:'' %>" />
                        <% if (checkExist('description',errors)){  %>
                        <label class="error"><%= errors.description %></label>
                        <% } %>
                    </div>
                </div>

                <div class="form-group  <%= (checkExist('status',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="active"><%= __('Active'); %></label>
                    <div class="col-md-10">
                        <input  checked="<%=(adminRole.status)?'checked':'' %>" class ='checkbox i-checks' type="checkbox" data-toggle="toggle" id="status" name="status" />
                        <% if (checkExist('status',errors)){  %>
                        <label class="error"><%= errors.status %></label>
                        <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row col-sm-6 col-sm-offset-2">
                        <button type="reset" class="btn btn-white" name="reset">Rest</button>
                        <button type="button" class="btn btn-primary btn-save" name="save"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
