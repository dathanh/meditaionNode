<div class="ibox float-e-margins">
    <div>
        <h5><%= __('Add Admin Permission'); %></h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-4 m-b-xs">
                <a class='btn btn-primary' escape href="<%= Routes.AdminPermissions.index.link %>"><i class="glyphicon glyphicon-list-alt"></i> <%=  __('List Admin Permission') %> </a>
            </div>
        </div>

        <div class="box-body">
            <form method="post" class='form-horizontal' novalidate='novalidate'>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group <%= (checkExist('role_id',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="role_id"><%= __('Role'); %></label>
                    <div class="col-md-10">
                        <select id="role_id" name="role_id" class="form-control select2">
                            <option value="0">Select role</option>
                            <% optionRole.forEach((role) => { %>
                            <option value="<%= role._id %>"><%= role.name %></option>
                            <% }); %>
                        </select>
                        <% if (checkExist('role_id',errors)){  %>
                        <label class="error"><%= errors.role_id %></label>
                        <% } %>
                    </div>
                </div>
                <div class="form-group  <%= (checkExist('controller',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="name"><%= __('Controller'); %><span class="text-danger">(*)</span></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="controller" required="required" name="controller" placeholder="<%= __('Controller'); %>" value="" />
                        <% if (checkExist('controller',errors)){  %>
                        <label class="error"><%= errors.controller %></label>
                        <% } %>
                    </div>
                </div>
                <div class="form-group  <%= (checkExist('action',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="action"><%= __('Action'); %><span class="text-danger">(*)</span></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="action" required="required" name="action" placeholder="<%= __('Action'); %>" value="" />
                        <% if (checkExist('action',errors)){  %>
                        <label class="error"><%= errors.action %></label>
                        <% } %>
                    </div>
                </div>

                <div class="form-group  <%= (checkExist('status',errors)) ? 'has-error' : '' %>">
                    <label class="col-md-2 control-label" for="active"><%= __('Active'); %></label>
                    <div class="col-md-10">
                        <input  checked="checked" class ='checkbox i-checks' type="checkbox" data-toggle="toggle" id="active" name="status" />
                        <% if (checkExist('status',errors)){  %>
                        <label class="error"><%= errors.status %></label>
                        <% } %>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="row col-sm-6 col-sm-offset-2">
                        <button type="reset" class="btn btn-white" name="reset">Rest</button>
                        <button type="button" class="btn btn-primary btn-save" name="save"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
